<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Tabla"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*">

    <TextView
        android:id="@+id/tvNovimiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reportes"
        android:gravity="center"

        android:textSize="35sp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"/>


    <TableRow
        android:id="@+id/Cabecera"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:divider="#000000"
        >

        <TextView
            android:id="@+id/codigo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5px"
            android:text="Codigo"

            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/producDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:padding="5px"
            android:text="Descripcion"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/piezas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5px"
            android:text="Cantidad"
            android:textColor="#005500"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5px"
            android:text="Precio"

            android:textColor="#005500"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1px"
            android:text="Total"
            android:textColor="#005500"
            android:textSize="18sp" />
    </TableRow>

    <TableRow
        android:id="@+id/SeparadorCabecera"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <FrameLayout
            android:id="@+id/LineaCabecera"
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_span="6"
            android:background="#FFFFFF" >
        </FrameLayout>
    </TableRow>

    <TableRow
        android:id="@+id/Fila1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/codBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="11185515"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Product1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="coca"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/cant1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="1"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/Plata1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:gravity="center"
            android:text="12"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/total1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1px"
            android:text="12"
            android:textColor="#005500"
            android:textSize="18sp" />
    </TableRow>

    <TableRow
        android:id="@+id/codBar2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/product2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="19761141"
            android:textSize="20sp" />



        <TextView
            android:id="@+id/Cuidad2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="sabritas"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/cant2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="3"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Plata2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:gravity="center"
            android:text="12"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/total2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1px"
            android:text="36"
            android:textColor="#005500"
            android:textSize="18sp" />
    </TableRow>
    <TableRow
        android:id="@+id/codBar5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/product3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textSize="20sp" />



        <TextView
            android:id="@+id/Cuidad3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textSize="20sp" />
        <TextView
            android:id="@+id/cant3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Plata3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:gravity="center"
            android:text=""
            android:textSize="20sp" />
        <TextView
            android:id="@+id/total3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1px"
            android:text="48"
            android:textColor="#005500"
            android:textSize="18sp" />
    </TableRow>




    <TableRow
        android:id="@+id/SeparadorTotales1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >


        <FrameLayout
            android:id="@+id/LineaTotales2"
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_span="5"
            android:background="#FFFFFF" >
        </FrameLayout>
    </TableRow>


    <TableRow
        android:id="@+id/SeparadorTotales"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <FrameLayout
            android:id="@+id/LineaTotales"
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_span="5"
            android:background="#FFFFFF" >
        </FrameLayout>
    </TableRow>

    <RelativeLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnexcel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_excel"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="38dp"
                android:text="excel"
                />
            <android.support.v4.widget.Space
                android:layout_width="20dp"
                android:layout_height="0dp"/>

            <Button
                android:id="@+id/btnimprimir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/print"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="38dp"
                android:text="imprimir"
                />
            <android.support.v4.widget.Space
                android:layout_width="20dp"
                android:layout_height="0dp"/>

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/save"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="38dp"
                android:text="guardar"
                />


        </LinearLayout>


    </RelativeLayout>

</TableLayout>
